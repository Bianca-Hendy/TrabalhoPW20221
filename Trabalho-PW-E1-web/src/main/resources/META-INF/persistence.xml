<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PW-2022-1-Trabalho" transaction-type="JTA">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <jta-data-source>jdbc/pw-2022-1-trabalho</jta-data-source>
    <class>br.edu.ifsul.pw2022.model.Aluno</class>
    <class>br.edu.ifsul.pw2022.model.Curso</class>
    <class>br.edu.ifsul.pw2022.model.Disciplina</class>
    <class>br.edu.ifsul.pw2022.model.Especialidade</class>
    <class>br.edu.ifsul.pw2022.model.Instituicao</class>
    <class>br.edu.ifsul.pw2022.model.Nota</class>
    <class>br.edu.ifsul.pw2022.model.Professor</class>
    <class>br.edu.ifsul.pw2022.model.Docente</class>
    <class>br.edu.ifsul.pw2022.model.Permissao</class>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>
    </properties>
  </persistence-unit>
</persistence>
